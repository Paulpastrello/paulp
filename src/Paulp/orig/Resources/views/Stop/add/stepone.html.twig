<div class="row">
	{{ form_start(form) }}
    
	<div class="col-xs-12">
		{% if not form.vars.valid %}
		<div class="alert alert-danger alert-dismissible"><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			Attenzione :
			{{ form_errors(form) }}
			{{ form_errors(form.nome) }}
			{{ form_errors(form.addr) }}
		</div>
		{% endif %}
	</div>

	<div class="form-group col-sm-2 col-xs-4">
		{{ form_widget(form.nome) }}
	</div>
	<div class="form-group col-sm-7 col-xs-8">
		<div class="input-group">
		{{ form_widget(form.addr) }}		
		<span class="input-group-btn">
			<button id="remloc" class="btn btn-default hidden" type="button" onclick="removeFormLocation()">
				<i class="glyphicon glyphicon-remove text-danger"></i>
			</button>
			<button id="geoloc" class="btn btn-default" type="button" onclick="getGeolocation()">
				<i class="glyphicon glyphicon-map-marker text-primary"></i>
			</button>
			
			{{ form_widget(form.save) }}
		</span>
		</div>
	</div>
	
	{{ form_rest(form) }}
	{{ form_end(form) }}
</div>