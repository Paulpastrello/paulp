{{ form_start(form) }}

{% if not form.vars.valid %}
<div class="row">    
	<div class="col-xs-12">		
		<div class="alert alert-danger alert-dismissible"><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			Attenzione :
			{{ form_errors(form) }}
			{{ form_errors(form.nome) }}
			{{ form_errors(form.addr) }}
			{{ form_errors(form.email) }}
			{{ form_errors(form.tweet) }}
		</div>
	</div>
</div>
{% endif %}

<div class="row">
	<div class="col-xs-12">
	
	{# prima riga #}
		<div class="form-group col-xs-3">
			{{ form_widget(form.nome) }}
		</div>	
		<div class="form-group col-xs-9">
			{{ form_widget(form.addr) }}
		</div>

	{# seconda riga #}
		<div class="form-group col-sm-3 col-xs-12">
			<div class="input-group">	
			<span class="input-group-addon" id="sizing-addon2">@</span>
			{{ form_widget(form.email) }}
			</div>
		</div>
		<div class="form-group col-sm-9 col-xs-12">	
			{{ form_widget(form.tweet) }}
		</div>

	{# terza riga #}		
		<div class="form-group col-sm-3 col-xs-8">
			{{ form_widget(form.save) }}
		</div>
		<div class="form-group col-sm-3 col-xs-4 pull-right">
			{{ form_widget(form.cancel) }}
		</div>
	
	</div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}